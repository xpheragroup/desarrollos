<odoo>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="chris_module2.list">
      <field name="name">chris_module2 list</field>
      <field name="model">chris_module2.chris_module2</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="chris_module2.action_window">
      <field name="name">chris_module2 window</field>
      <field name="res_model">chris_module2.chris_module2</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="chris_module2.action_server">
      <field name="name">chris_module2 server</field>
      <field name="model_id" ref="model_chris_module2_chris_module2"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="chris_module2" id="chris_module2.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="chris_module2.menu_1" parent="chris_module2.menu_root"/>
    <menuitem name="Menu 2" id="chris_module2.menu_2" parent="chris_module2.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="chris_module2.menu_1_list" parent="chris_module2.menu_1"
              action="chris_module2.action_window"/>
    <menuitem name="Server to list" id="chris_module2" parent="chris_module2.menu_2"
              action="chris_module2.action_server"/>
</odoo>