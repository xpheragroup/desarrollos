<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="formulario_param.list">
      <field name="name">Lista de Parametrizaciones</field>
      <field name="model">formulario.param</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="formulario_param.action_window">
      <field name="name">Pantalla Parametrizaciones</field>
      <field name="res_model">formulario.param</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="formulario_param.action_server">
      <field name="name">Parametrizaciones server</field>
      <field name="model_id" ref="model_formulario_param"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Formulario ParametrizaciÃ³n" id="formulario_param.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Menu 1" id="formulario_param.menu_1" parent="formulario_param.menu_root"/>
    <menuitem name="Menu 2" id="formulario_param.menu_2" parent="formulario_param.menu_root"/>

    <!-- actions -->
    <menuitem name="Lista" id="formulario_param.menu_1_list" parent="formulario_param.menu_1"
              action="formulario_param.action_window"/>
    <menuitem name="Server to list" id="formulario_param.menu_2_list" parent="formulario_param.menu_2"
              action="formulario_param.action_server"/>
  </data>
</odoo>